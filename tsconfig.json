{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@api": [
        "api"
      ],
      "@models/*": [
        "models/*"
      ],
      "@models": [
        "models"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@repositories": [
        "repositories"
      ],
      "@services/*": [
        "services/*"
      ],
      "@services": [
        "services"
      ],
      "@utilities/*": [
        "utilities/*"
      ],
      "@utilities": [
        "utilities"
      ],
      "@components/*": [
        "components/*"
      ],
      "@components": [
        "components"
      ],
      "@styles/*": [
        "styles/*"
      ],
      "@styles": [
        "styles"
      ],
      "@supabase/*": [
        "supabase/*"
      ],
      "@supabase": [
        "supabase"
      ],
      "@public/*": [
        "public/*"
      ],
      "@public": [
        "public"
      ],
      "@emails/*": [
        "email/emails/*"
      ],
      "@emails": [
        "email/emails"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}